#!/bin/bash
#
# Site Manager - 站点管理工具
# https://github.com/samuel25555/site_manager
#

# 错误处理: 使用 trap 而不是 set -e
trap 'last_command=$current_command; current_command=$BASH_COMMAND' DEBUG
trap 'if [ $? -ne 0 ]; then log_error "命令失败: $last_command"; fi' ERR

VERSION="1.1.0"

# 解析真实路径 (处理符号链接)
SOURCE="${BASH_SOURCE[0]}"
while [ -h "$SOURCE" ]; do
    DIR="$( cd -P "$( dirname "$SOURCE" )" && pwd )"
    SOURCE="$(readlink "$SOURCE")"
    [[ $SOURCE != /* ]] && SOURCE="$DIR/$SOURCE"
done
SCRIPT_DIR="$( cd -P "$( dirname "$SOURCE" )" && pwd )"

ROOT_DIR="$(dirname "$SCRIPT_DIR")"
LIB_DIR="$ROOT_DIR/lib"
CONFIG_DIR="$ROOT_DIR/config"

# 加载库文件
source "$LIB_DIR/colors.sh"
source "$LIB_DIR/utils.sh"
source "$LIB_DIR/site.sh"
source "$LIB_DIR/ssl.sh"
source "$LIB_DIR/db.sh"
source "$LIB_DIR/backup.sh"
source "$LIB_DIR/logs.sh"
source "$LIB_DIR/php.sh"
source "$LIB_DIR/proxy.sh"
source "$LIB_DIR/docker.sh"
source "$LIB_DIR/panel.sh"
source "$LIB_DIR/software.sh"
source "$LIB_DIR/firewall.sh"

# 加载配置
source "$CONFIG_DIR/site_manager.conf"

#---------------------------------------
# 需要 root 权限的命令
#---------------------------------------
needs_root() {
    local cmd="$1"
    case "$cmd" in
        create|delete|enable|disable|ssl|backup|restore|db|php|nginx|supervisor|restart|panel|install|uninstall|firewall)
            return 0
            ;;
        *)
            return 1
            ;;
    esac
}

usage() {
    echo ""
    echo -e "${GREEN}Site Manager v$VERSION${NC}"
    echo ""
    echo "Usage: site <command> [options]"
    echo ""
    echo -e "${CYAN}软件管理:${NC}"
    echo "  install <software> [ver]  安装软件 (nginx|php|mysql|redis...)"
    echo "  uninstall <software>      卸载软件"
    echo "  software list             列出已安装软件"
    echo "  software available        列出可安装软件"
    echo ""
    echo -e "${CYAN}防火墙:${NC}"
    echo "  firewall status           防火墙状态"
    echo "  firewall on|off           开启/关闭防火墙"
    echo "  firewall allow <port>     开放端口"
    echo "  firewall deny <port>      关闭端口"
    echo "  firewall allow-ip <IP>    允许 IP"
    echo "  firewall deny-ip <IP>     禁止 IP"
    echo "  firewall preset <name>    快捷端口组 (web/ssh/mysql/redis)"
    echo ""
    echo -e "${CYAN}站点管理:${NC}"
    echo "  create <domain> <type>    创建站点 (php|php:8.1|static|node|python|docker|proxy)"
    echo "  delete <domain>           删除站点"
    echo "  enable <domain>           启用站点"
    echo "  disable <domain>          禁用站点"
    echo "  list                      列出所有站点"
    echo "  info <domain>             站点详情"
    echo "  status [domain]           站点状态"
    echo ""
    echo -e "${CYAN}SSL 证书:${NC}"
    echo "  ssl <domain> [--dns]      申请证书 (可选 DNS 验证)"
    echo "  ssl renew                 续期所有证书"
    echo ""
    echo -e "${CYAN}日志与备份:${NC}"
    echo "  logs <domain> [-f] [-e]   查看日志 (-f 实时, -e 错误)"
    echo "  backup <domain>           备份站点"
    echo "  restore <domain> <file>   恢复站点"
    echo "  backups [domain]          列出备份"
    echo ""
    echo -e "${CYAN}数据库:${NC}"
    echo "  db create <name>          创建数据库"
    echo "  db drop <name>            删除数据库"
    echo "  db import <name> [file]   导入数据"
    echo "  db export <name>          导出数据"
    echo "  db list                   列出数据库"
    echo "  db backup-all             备份所有数据库"
    echo "  db cron <hourly|daily|weekly|off>  定时备份"
    echo "  db backups [name]         列出数据库备份"
    echo ""
    echo -e "${CYAN}PHP 管理:${NC}"
    echo "  php list                  列出 PHP 版本"
    echo "  php set <domain> <ver>    设置 PHP 版本"
    echo ""
    echo -e "${CYAN}反向代理:${NC}"
    echo "  proxy <domain> set-target <url>         设置目标"
    echo "  proxy <domain> add-upstream <server>    添加上游"
    echo "  proxy <domain> remove-upstream <server> 删除上游"
    echo ""
    echo -e "${CYAN}服务管理:${NC}"
    echo "  nginx <test|reload|restart>  Nginx 管理"
    echo "  supervisor <reload|restart>  Supervisor 管理"
    echo "  restart                      重启所有服务"
    echo ""
    echo -e "${CYAN}Docker:${NC}"
    echo "  docker up <domain>        启动容器"
    echo "  docker down <domain>      停止容器"
    echo "  docker logs <domain>      查看日志"
    echo ""
    echo -e "${CYAN}Web 面板:${NC}"
    echo "  panel start [--port=8888] 启动面板"
    echo "  panel stop                停止面板"
    echo "  panel status              面板状态"
    echo "  panel password            重置密码"
    echo ""
}

#---------------------------------------
# 主入口
#---------------------------------------
main_cmd="$1"

# 检查 root 权限
if needs_root "$main_cmd" && [ "$EUID" -ne 0 ]; then
    log_error "此命令需要 root 权限，请使用 sudo site $main_cmd"
    exit 1
fi

case "$main_cmd" in
    # 软件管理
    install)
        shift
        software_main install "$@"
        ;;
    uninstall)
        shift
        software_main uninstall "$@"
        ;;
    software)
        shift
        software_main "$@"
        ;;

    # 防火墙
    firewall|fw)
        shift
        firewall_main "$@"
        ;;

    # 站点管理
    create)
        [ -z "$2" ] && { log_error "缺少域名参数"; exit 1; }
        [ -z "$3" ] && { log_error "缺少类型参数 (php|static|node|python|docker|proxy)"; exit 1; }
        site_create "$2" "$3" "${@:4}"
        ;;
    delete)
        [ -z "$2" ] && { log_error "缺少域名参数"; exit 1; }
        site_delete "$2"
        ;;
    enable)
        [ -z "$2" ] && { log_error "缺少域名参数"; exit 1; }
        site_enable "$2"
        ;;
    disable)
        [ -z "$2" ] && { log_error "缺少域名参数"; exit 1; }
        site_disable "$2"
        ;;
    list|ls)
        site_list
        ;;
    info)
        [ -z "$2" ] && { log_error "缺少域名参数"; exit 1; }
        site_info "$2"
        ;;
    status)
        site_status "$2"
        ;;

    # SSL
    ssl)
        shift
        if [ "$1" == "renew" ]; then
            ssl_renew
        else
            [ -z "$1" ] && { log_error "缺少域名参数"; exit 1; }
            ssl_request "$@"
        fi
        ;;

    # 日志与备份
    logs)
        [ -z "$2" ] && { log_error "缺少域名参数"; exit 1; }
        logs_view "$2" "${@:3}"
        ;;
    backup)
        [ -z "$2" ] && { log_error "缺少域名参数"; exit 1; }
        backup_create "$2"
        ;;
    restore)
        [ -z "$2" ] && { log_error "缺少域名参数"; exit 1; }
        [ -z "$3" ] && { log_error "缺少备份文件参数"; exit 1; }
        backup_restore "$2" "$3"
        ;;
    backups)
        backup_list "$2"
        ;;

    # 数据库
    db)
        case "$2" in
            create)
                [ -z "$3" ] && { log_error "缺少数据库名"; exit 1; }
                db_create "$3"
                ;;
            backup-all)
                db_backup_all
                ;;
            cron)
                db_cron_setup "$3"
                ;;
            backups)
                db_backups "$3"
                ;;
            drop)
                [ -z "$3" ] && { log_error "缺少数据库名"; exit 1; }
                db_drop "$3"
                ;;
            import)
                [ -z "$3" ] && { log_error "缺少数据库名"; exit 1; }
                db_import "$3" "$4"
                ;;
            export)
                [ -z "$3" ] && { log_error "缺少数据库名"; exit 1; }
                db_export "$3"
                ;;
            list)
                db_list
                ;;
            *)
                echo "Usage: site db <create|drop|import|export|list|backup-all|backups|cron> [args]"
                exit 1
                ;;
        esac
        ;;

    # PHP
    php)
        case "$2" in
            list)
                php_list
                ;;
            set)
                [ -z "$3" ] && { log_error "缺少域名参数"; exit 1; }
                [ -z "$4" ] && { log_error "缺少 PHP 版本参数"; exit 1; }
                php_set "$3" "$4"
                ;;
            *)
                echo "Usage: site php <list|set <domain> <version>>"
                exit 1
                ;;
        esac
        ;;

    # 反向代理
    proxy)
        [ -z "$2" ] && { log_error "缺少域名参数"; exit 1; }
        [ -z "$3" ] && { log_error "缺少操作参数"; exit 1; }
        proxy_manage "$2" "$3" "$4"
        ;;

    # Docker
    docker)
        case "$2" in
            up)
                [ -z "$3" ] && { log_error "缺少域名参数"; exit 1; }
                docker_up "$3"
                ;;
            down)
                [ -z "$3" ] && { log_error "缺少域名参数"; exit 1; }
                docker_down "$3"
                ;;
            logs)
                [ -z "$3" ] && { log_error "缺少域名参数"; exit 1; }
                docker_logs "$3"
                ;;
            *)
                echo "Usage: site docker <up|down|logs> <domain>"
                exit 1
                ;;
        esac
        ;;

    # 服务管理
    nginx)
        nginx_manage "$2"
        ;;
    supervisor)
        supervisor_manage "$2"
        ;;
    restart)
        services_restart
        ;;

    # 面板
    panel)
        panel_manage "$2" "${@:3}"
        ;;

    # 版本和帮助
    -v|--version)
        echo "Site Manager v$VERSION"
        ;;
    -h|--help|"")
        usage
        ;;
    *)
        log_error "未知命令: $main_cmd"
        echo ""
        echo "使用 'site --help' 查看帮助"
        exit 1
        ;;
esac
